---
// EpoxyCalculator.astro
// L√≥gica de servidor (opcional para props iniciales)
---

<div class="calculator-container">
  <header class="calc-header">
    <div class="header-icon">üíß</div>
    <h1>Calculadora de Resina <span class="gradient-text">Premium</span></h1>
    <p>Precisi√≥n profesional para tus proyectos de arte y construcci√≥n.</p>
  </header>

  <main class="calc-grid">
    <section class="input-section card">
      <div class="input-group">
        <label for="surface">üìê Superficie (m¬≤)</label>
        <input
          type="number"
          id="surface"
          step="0.01"
          placeholder="Ej: 10 m¬≤"
          min="0"
          aria-label="Superficie en metros cuadrados"
        />
      </div>

      <div class="input-group">
        <label for="thickness">üìè Grosor/Capa (mm)</label>
        <input
          type="number"
          id="thickness"
          step="0.1"
          placeholder="Ej: 2 mm"
          min="0"
          aria-label="Grosor en mil√≠metros"
        />
      </div>

      <div class="checkbox-group">
        <label class="switch">
          <input type="checkbox" id="waste" />
          <span class="slider round"></span>
        </label>
        <span>Incluir 10% de desperdicio</span>
      </div>

      <div id="error-message" class="error-box hidden">
        Por favor, ingresa valores v√°lidos mayores a 0.
      </div>
    </section>

    <section class="visual-section card">
      <div class="total-badge">
        <span class="label">VOLUMEN TOTAL</span>
        <span id="total-liters">0.00</span>
        <span class="unit">Litros</span>
      </div>

      <div class="containers-wrapper">
        <div class="beaker-container">
          <div class="beaker resin-beaker">
            <div class="liquid resin-liquid" id="fill-resin">
              <div class="bubbles"></div>
            </div>
            <span class="beaker-value" id="val-resin">0.00L</span>
          </div>
          <p class="beaker-label">RESINA (A)</p>
          <span class="proportion-tag">2 PARTES</span>
        </div>

        <div class="beaker-container">
          <div class="beaker hardener-beaker">
            <div class="liquid hardener-liquid" id="fill-hardener">
              <div class="bubbles"></div>
            </div>
            <span class="beaker-value" id="val-hardener">0.00L</span>
          </div>
          <p class="beaker-label">CATALIZADOR (B)</p>
          <span class="proportion-tag">1 PARTE</span>
        </div>
      </div>

      <div class="ratio-bar">
        <div class="ratio-part resin-part"></div>
        <div class="ratio-part hardener-part"></div>
      </div>
      <p class="ratio-text">Proporci√≥n de Mezcla <strong>2:1</strong></p>
    </section>
  </main>
</div>

<style>
  :root {
    --primary-bg: #0f172a;
    --card-bg: rgba(30, 41, 59, 0.7);
    --accent-blue: #3b82f6;
    --accent-amber: #f59e0b;
    --text-main: #f8fafc;
    --text-dim: #94a3b8;
    --glass-border: rgba(255, 255, 255, 0.1);
    --error-red: #ef4444;
  }

  .calculator-container {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      sans-serif;
    max-width: 900px;
    margin: 2rem auto;
    padding: 2rem;
    background: radial-gradient(circle at top right, #1e293b, #0f172a);
    border-radius: 24px;
    color: var(--text-main);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
  }

  /* Header */
  .calc-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .header-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 15px var(--accent-blue));
  }

  .gradient-text {
    background: linear-gradient(90deg, var(--accent-blue), #60a5fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Layout Grid */
  .calc-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .calc-grid {
      grid-template-columns: 1fr;
    }
  }

  .card {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--glass-border);
    transition: transform 0.3s ease;
  }

  /* Inputs */
  .input-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-dim);
    font-size: 0.9rem;
    font-weight: 500;
  }

  input[type="number"] {
    width: 100%;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid var(--glass-border);
    padding: 12px 16px;
    border-radius: 12px;
    color: white;
    font-size: 1.1rem;
    transition: all 0.2s ease;
    outline: none;
    box-sizing: border-box;
  }

  input[type="number"]:focus {
    border-color: var(--accent-blue);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
  }

  /* Checkbox Custom */
  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--text-dim);
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 44px;
    height: 24px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #334155;
    transition: 0.4s;
    border-radius: 34px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: var(--accent-blue);
  }
  input:checked + .slider:before {
    transform: translateX(20px);
  }

  /* Visualizaci√≥n Litros */
  .total-badge {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--glass-border);
  }

  #total-liters {
    display: block;
    font-size: 3.5rem;
    font-weight: 800;
    color: white;
    line-height: 1;
  }

  .total-badge .label {
    color: var(--accent-blue);
    letter-spacing: 2px;
    font-weight: 700;
    font-size: 0.8rem;
  }
  .total-badge .unit {
    font-size: 1.2rem;
    color: var(--text-dim);
  }

  /* Vasos / Beakers */
  .containers-wrapper {
    display: flex;
    justify-content: space-around;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .beaker-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .beaker {
    position: relative;
    width: 100%;
    max-width: 120px;
    height: 180px;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-top: none;
    border-radius: 0 0 15px 15px;
    overflow: hidden;
    margin-bottom: 1rem;
    display: flex;
    align-items: flex-end;
  }

  .beaker::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      transparent,
      transparent 19%,
      rgba(255, 255, 255, 0.05) 20%
    );
    z-index: 2;
  }

  .liquid {
    width: 100%;
    height: 0%; /* Din√°mico */
    transition: height 0.8s cubic-bezier(0.17, 0.67, 0.83, 0.67);
    position: relative;
    box-shadow: inset 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .resin-liquid {
    background: linear-gradient(to top, #2563eb, #60a5fa);
  }
  .hardener-liquid {
    background: linear-gradient(to top, #d97706, #fbbf24);
  }

  .beaker-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    font-weight: 700;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    pointer-events: none;
  }

  .beaker-label {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-dim);
    margin: 0;
  }
  .proportion-tag {
    font-size: 0.65rem;
    background: #334155;
    padding: 2px 8px;
    border-radius: 10px;
    margin-top: 4px;
  }

  /* Ratio Bar */
  .ratio-bar {
    height: 8px;
    display: flex;
    border-radius: 4px;
    overflow: hidden;
    margin-top: 1rem;
  }

  .resin-part {
    flex: 2;
    background: var(--accent-blue);
  }
  .hardener-part {
    flex: 1;
    background: var(--accent-amber);
  }
  .ratio-text {
    text-align: center;
    font-size: 0.85rem;
    margin-top: 0.8rem;
    color: var(--text-dim);
  }

  /* Error State */
  .error-box {
    margin-top: 1rem;
    padding: 10px;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--error-red);
    color: var(--error-red);
    border-radius: 8px;
    font-size: 0.85rem;
  }

  .hidden {
    display: none;
  }
  .shake {
    animation: shake 0.4s ease-in-out;
  }

  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-5px);
    }
    75% {
      transform: translateX(5px);
    }
  }

  /* Bubbles Animation */
  .bubbles {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
  }

  .bubbles::after {
    content: "‚óã";
    position: absolute;
    bottom: -20px;
    color: rgba(255, 255, 255, 0.3);
    animation: rise 3s infinite ease-in;
  }

  @keyframes rise {
    0% {
      bottom: -10%;
      transform: translateX(0);
      opacity: 1;
    }
    100% {
      bottom: 100%;
      transform: translateX(20px);
      opacity: 0;
    }
  }
</style>

<script>
  //@ts-nocheck
  const surfaceInput = document.getElementById("surface");
  const thicknessInput = document.getElementById("thickness");
  const wasteCheckbox = document.getElementById("waste");
  const totalLitersDisplay = document.getElementById("total-liters");
  const resinDisplay = document.getElementById("val-resin");
  const hardenerDisplay = document.getElementById("val-hardener");
  const resinFill = document.getElementById("fill-resin");
  const hardenerFill = document.getElementById("fill-hardener");
  const errorBox = document.getElementById("error-message");

  function calculate() {
    const surface = parseFloat(surfaceInput.value);
    const thickness = parseFloat(thicknessInput.value);
    const useWaste = wasteCheckbox.checked;

    if (isNaN(surface) || isNaN(thickness) || surface <= 0 || thickness <= 0) {
      if (surfaceInput.value || thicknessInput.value) {
        errorBox.classList.remove("hidden");
        errorBox.classList.add("shake");
        setTimeout(() => errorBox.classList.remove("shake"), 400);
      }
      resetDisplays();
      return;
    }

    errorBox.classList.add("hidden");

    // F√ìRMULA: (m2 * mm) / 1000 = Litros
    let totalLiters = surface * thickness; // m2 * mm nos da los litros directamente si asumimos densidad 1:1

    // Seg√∫n tu requerimiento: 1kg (1L) por cada 1mm en 1m2
    // Volumen = (m2 * mm)

    if (useWaste) {
      totalLiters *= 1.1;
    }

    const resinLiters = totalLiters * (2 / 3);
    const hardenerLiters = totalLiters * (1 / 3);

    updateUI(totalLiters, resinLiters, hardenerLiters);
  }

  function updateUI(total, resin, hardener) {
    // Texto con 2 decimales
    totalLitersDisplay.textContent = total.toFixed(2);
    resinDisplay.textContent = `${resin.toFixed(2)}L`;
    hardenerDisplay.textContent = `${hardener.toFixed(2)}L`;

    // Animaci√≥n de llenado
    // El 100% de la altura visual representar√° el total calculado en ese momento
    // pero para que se vea la proporci√≥n 2:1, escalamos seg√∫n el m√°ximo posible en el UI
    resinFill.style.height = `66.66%`;
    hardenerFill.style.height = `33.33%`;

    // Si queremos que suban desde 0 la primera vez
    if (total > 0) {
      resinFill.style.opacity = "1";
      hardenerFill.style.opacity = "1";
    }
  }

  function resetDisplays() {
    totalLitersDisplay.textContent = "0.00";
    resinDisplay.textContent = "0.00L";
    hardenerDisplay.textContent = "0.00L";
    resinFill.style.height = "0%";
    hardenerFill.style.height = "0%";
  }

  // Listeners
  [surfaceInput, thicknessInput, wasteCheckbox].forEach((el) => {
    el.addEventListener("input", calculate);
  });
</script>
