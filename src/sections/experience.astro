---

<section id="experience">
  <h2>EXPERIENCE</h2>
  <div class="grid">
    {
      experience.map((element) => (
        <article class="card">
          <h3>{element.company}</h3>
          <p class="position">{element.position}</p>
          <p>{element.summary}</p>
          <br />

          <ul class="highlights flex-row">
            {element.highlights.map((highlight) => (
              <li class="highlight">{highlight}</li>
              <br />
            ))}
          </ul>
        </article>
      ))
    }
  </div>
</section>

<style>
  h2 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 2rem;
    color: var(--clr-primary);
  }

  .grid {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    align-items: stretch;
  }

  .card {
    background-color: #ffffff12;
    border-radius: 25px;
    padding: 20px;
    transition: var(--transition);
    align-items: start;
    gap: 2px;
    width: 100%;
    max-width: 100%;
    backdrop-filter: blur(7px);
  }

  .card h3 {
    font-size: 1.3rem;
    padding-left: 0;
  }

  .card p.position {
    margin-bottom: 12px;
  }

  .card .boton {
    margin-top: auto;
    /* border: solid 1px var(--clr-border); */
  }

  .highlights{
    gap: 10px; 
    flex-wrap: wrap;
    align-items: stretch;
    justify-content: flex-start;
  }

  .highlight{
    padding: 10px 15px;
    width: fit-content;
    max-width: 300px;
    border-radius: 15px;
    background-color: var(--clr-background);
  }

  @media (hover: hover) {
  }

  /* DESKTOP - A partir de 750px */
  @media (min-width: 750px) {
    .grid {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .card {
      /* max-width: 900px; */
    }

    h2 {
      font-size: 3rem;
    }
  }
</style>
