---
//@ts-nocheck
import Layout1 from "../../../layouts/Layout1.astro";

// 1. Capturar el ID de la URL
const { id } = Astro.params;

// 2. Hacer fetch del personaje específico
const response = await fetch(`https://thesimpsonsapi.com/api/characters/${id}`);
const character = await response.json();

const title = `${character.name} | The Simpsons`;
---

<Layout1 title={title} />

<section id="character-detail">
  <!-- Botón volver -->
  <a href="/projects/thesimpsons" class="back-btn flex-row">
    <span>←</span> Volver al listado
  </a>

  <article class="detail-card flex-column">
    <!-- Imagen del personaje -->
    <div class="image-container">
      <img
        src={`https://cdn.thesimpsonsapi.com/500${character.portrait_path}`}
        alt={character.name}
      />
    </div>

    <!-- Información principal -->
    <div class="info-container flex-column">
      <h1>{character.name}</h1>

      <div class="basic-info flex-column">
        {
          character.age && (
            <p>
              <strong>Edad:</strong> {character.age} años
            </p>
          )
        }
        {
          character.gender && (
            <p>
              <strong>Género:</strong> {character.gender}
            </p>
          )
        }
        {
          character.occupation && (
            <p>
              <strong>Ocupación:</strong> {character.occupation}
            </p>
          )
        }
        {
          character.status && (
            <p class={`status ${character.status.toLowerCase()}`}>
              <strong>Estado:</strong> {character.status}
            </p>
          )
        }
      </div>

      <!-- Frases icónicas -->
      {
        character.phrases && character.phrases.length > 0 && (
          <div class="phrases-section flex-column">
            <h3>Frases icónicas:</h3>
            <ul>
              {character.phrases.map((phrase) => (
                <li>"{phrase}"</li>
              ))}
            </ul>
          </div>
        )
      }
    </div>
  </article>
</section>

<style>
  body {
    background-color: #eaf0fb;
  }

  #character-detail {
    gap: 25px;
  }

  /* Botón volver */
  .back-btn {
    align-self: flex-start;
    gap: 8px;
    padding: 10px 18px;
    background-color: #fff;
    border: solid 2px var(--clr-border);
    border-radius: 50px;
    color: var(--clr-dark);
    font-weight: 600;
    letter-spacing: 1px;
    transition: var(--transition);
    text-transform: uppercase;
    font-size: 0.85rem;
  }

  .back-btn span {
    font-size: 1.2rem;
  }

  /* Card principal */
  .detail-card {
    background-color: #fff;
    border-radius: 15px;
    padding: 30px;
    gap: 30px;
    max-width: 800px;
    width: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  /* Imagen */
  .image-container {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .image-container img {
    width: 100%;
    max-width: 300px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 10px;
    border: solid 3px #f8db27;
  }

  /* Información */
  .info-container {
    width: 100%;
    gap: 20px;
    align-items: flex-start;
  }

  .info-container h1 {
    font-size: 2rem;
    color: #3768d7;
    text-align: center;
    width: 100%;
  }

  /* Info básica */
  .basic-info {
    width: 100%;
    gap: 10px;
    align-items: flex-start;
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
  }

  .basic-info p {
    font-size: 1rem;
    color: var(--clr-text);
  }

  .basic-info strong {
    color: var(--clr-dark);
  }

  /* Estado (Alive/Deceased) */
  .status.alive {
    color: #28a745;
  }

  .status.deceased {
    color: #dc3545;
  }

  /* Frases */
  .phrases-section {
    width: 100%;
    gap: 15px;
    align-items: flex-start;
  }

  .phrases-section h3 {
    color: var(--clr-dark);
    font-size: 1.3rem;
  }

  .phrases-section ul {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding-left: 0;
  }

  .phrases-section li {
    background-color: #fff8dc;
    padding: 12px 18px;
    border-radius: 8px;
    border-left: solid 4px #f8db27;
    color: var(--clr-text);
    font-style: italic;
    font-size: 0.95rem;
  }

  /* Hover effects */
  @media (hover: hover) {
    .back-btn:hover {
      background-color: #f8db27;
      border-color: #dfc523;
      scale: 1.02;
    }
  }

  /* Responsive */
  @media (min-width: 750px) {
    .detail-card {
      flex-direction: row;
      align-items: flex-start;
    }

    .image-container {
      width: 40%;
      min-width: 250px;
    }

    .info-container {
      width: 60%;
    }

    .info-container h1 {
      text-align: left;
      font-size: 2.5rem;
    }
  }
</style>
