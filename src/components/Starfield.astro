---

<div class="starfield" aria-hidden="true"></div>

<style>
  @keyframes star-flicker {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 1;
    }
  }

  .starfield {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
  }

  .starfield :global(.star) {
    position: absolute;
    background: white;
    border-radius: 50%;
    animation: star-flicker var(--duration) infinite ease-in-out;
  }
</style>

<script>
  //@ts-nocheck
  const starfield = document.querySelector(".starfield");

  // Crear 150 estrellas
  for (let i = 0; i < 100; i++) {
    const star = document.createElement("div");
    star.className = "star";

    // Tama침o aleatorio entre 1px y 3px
    const size = Math.random() * 2 + 0.5;
    star.style.width = size + "px";
    star.style.height = size + "px";

    // Posici칩n aleatoria
    star.style.left = Math.random() * 100 + "%";
    star.style.top = Math.random() * 100 + "%";

    // Duraci칩n de animaci칩n aleatoria
    star.style.setProperty("--duration", Math.random() * 3.5 + 2.5 + "s");

    starfield.appendChild(star);
  }
</script>
